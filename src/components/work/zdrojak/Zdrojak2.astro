---
import ZdrojakLogo from "./zdrojak.svg";
import CardImage from "../card/CardImage.astro";
import CardBody from "../card/CardBody.astro";
import WebsiteCard from "../card/WebsiteCard.astro";
import ProjectCard from "../card/ProjectCard.astro";
import screenshot from "../zdrojak/zdrojak.png";
import { Image } from "astro:assets";
import Link from '../../../icons/link.svg'
import Tags from "../card/Tags.astro";
---

<WebsiteCard>

	<a href="https://zdrojak.cz" target="_blank" slot="image">
		<Image
			src={screenshot} alt="Zdroják.cz"
			class="rounded-2xl shadow-lg"
			loading="eager"
		/>
	</a>

	<div class="lg:grow">
		<a href="https://zdrojak.cz" target="_blank" class="hover:text-inherit text-gray-800">
			<ZdrojakLogo class="w-48 h-auto mb-2 mx-auto md:ml-0"/>
		</a>

		<p class="prose prose-xl">
			<a href="https://zdrojak.cz" target="_blank">Zdroják.cz</a> is one of the most recognized Czech magazines focused on
			software development. I’ve been part of the team since its <abbr title="In year 2013">relaunch</abbr>,
			working as the <strong>lead developer</strong> and <strong>site administrator</strong>. The current version runs on WordPress,
			enhanced with a range of custom-built plugins, WordPress modifications, and optimizations.
		</p>

		<Tags>
			<li>PHP8.4</li>
			<li>MariaDB</li>
			<li>Wordpress</li>
			<li>Tailwind CSS</li>
			<li>Parcel</li>
			<li>Docker</li>
		</Tags>
	</div>

	<div slot="footer" class="text-center md:text-right">
		<a class="inline-flex justify-center items-center gap-1" href="https://zdrojak.cz" target="_blank" slot="link">
			<Link class="size-4"/>
			Zdroják.cz
		</a>
	</div>

</WebsiteCard>