---
export interface Props {
	npm?: string;
	git?: string;
	style?: string;
}
const {
	npm,
	git,
	style = "for-the-badge", // @see https://shields.io/category/quality
} = Astro.props as Props;
---

<p class="flex flex-wrap items-center justify-center gap-2">
	<a href={`https://www.npmjs.com/package/${npm}`} target="_blank" aria-label="Downloads">
		<img src={`https://img.shields.io/npm/dm/${npm}?style=${style}`} alt="Downloads"/>
	</a>
	<a href={`https://www.npmjs.com/package/${npm}`} target="_blank" aria-label="Package version">
		<img src={`https://img.shields.io/npm/v/${npm}?style=${style}`} alt="Version"/>
	</a>
	<a href={`https://github.com/${git}/blob/main/LICENSE`} target="_blank" aria-label="License">
		<img src={`https://img.shields.io/npm/l/${npm}?style=${style}`} alt="License"/>
	</a>
	<a href={`https://github.com/${git}/commit/main`} target="_blank" aria-label="Last commit">
		<img src={`https://img.shields.io/github/last-commit/${git}?style=${style}`} alt="Last commit"/>
	</a>
	<a href={`https://github.com/${git}/actions`} target="_blank" aria-label="Workflow status">
		<img src={`https://img.shields.io/github/actions/workflow/status/${git}/main.yml?style=${style}`} alt="Workflow status"/>
	</a>
</p>