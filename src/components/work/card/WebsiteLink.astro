---
import Link from '../../../icons/link.svg'

export interface Props {
	href: string;
}
const {href} = Astro.props as Props;
---
<div slot="footer" class="text-center md:text-right">
	<a class="inline-flex justify-center items-center gap-1 py-4" href={href} target="_blank">
		<Link class="size-4"/>
		<slot/>
	</a>
</div>