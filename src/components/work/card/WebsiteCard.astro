---
import { Image } from 'astro:assets';
import screenshot from "../testomato/testomato.png"
---

<article class="group has-[:focus-visible]:outline has-[:focus-visible]:outline-offset-1">

	<div class="flex gap-4 md:gap-8 lg:gap-12 flex-col md:flex-row">
		<div class="md:w-1/3 lg:w-1/3">
			<slot name="image"/>
		</div>
		<div class="md:w-2/3 lg:w-3/4">
			<slot name="header"/>
			<slot/>
		</div>
	</div>

	<footer class="w-full self-end mt-4">
		<slot name="footer"/>
	</footer>
</article>