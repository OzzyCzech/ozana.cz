---
import {
	Apple,
	Linux,
	Angular,
	Ava,
	Css,
	Cypress,
	Git,
	GnuMake,
	Html,
	Js,
	TypeScript,
	JQuery,
	Mocha,
	Mongodb,
	Mariadb,
	Vue,
	Nette,
	NextJs,
	Nodejs,
	Parcel,
	Vite,
	Astro as AstroIcon,
	Php,
	PhpStorm,
	Docker,
	PhpUnit,
	React,
	Redis,
	Svelte,
	Tailwind,
	Webpack,
	ZendFramework
} from "@wticons/astro";
---
<section class="break-before-page">
	<h2 class="text-2xl font-semibold border-b-2 border-gray-300 mb-1 pb-2 italic text-gray-600 print:text-current">Tech Stack</h2>

	<div class="grid grid-flow-row gap-8 my-8">

		<article>
			<h3>Backend</h3>
			<div class="flex flex-wrap gap-3">
				<a href="https://www.php.net" target="_blank" rel="noopener" class="icon">
					<Php/>
					<small>PHP</small>
				</a>
				<a href="https://nodejs.org" target="_blank" rel="noopener" class="icon">
					<Nodejs/>
					<small>Node.js</small>
				</a>
				<a href="https://framework.zend.com/" target="_blank" rel="noopener" class="icon">
					<ZendFramework/>
					<small>Zend</small>
				</a>
				<a href="https://nette.org" target="_blank" rel="noopener" class="icon">
					<Nette/>
					<small>Nette</small>
				</a>
			</div>
		</article>

		<article>
			<h3>Languages</h3>
			<div class="flex flex-wrap gap-3">
				<a href="https://developer.mozilla.org/en-US/docs/Web/JavaScript" target="_blank" rel="noopener" class="icon">
					<Js/>
					<small>Javascript</small>
				</a>
				<a href="https://developer.mozilla.org/en-US/docs/Web/JavaScript" target="_blank" rel="noopener" class="icon">
					<TypeScript/>
					<small>Typescript</small>
				</a>
				<a href="https://developer.mozilla.org/en-US/docs/Web/HTML" target="_blank" rel="noopener" class="icon">
					<Html/>
					<small>HTML5</small>
				</a>
				<a href="https://developer.mozilla.org/en-US/docs/Web/CSS" target="_blank" rel="noopener" class="icon">
					<Css/>
					<small>CSS3</small>
				</a>
			</div>
		</article>

		<article>
			<h3>Frontend</h3>
			<div class="flex flex-wrap gap-3">
				<a href="https://tailwindcss.com" target="_blank" rel="noopener" class="icon">
					<Tailwind/>
					<small class="text-center">Tailwindcss</small>
				</a>
				<a href="https://jquery.com" target="_blank" rel="noopener" class="icon">
					<JQuery/>
					<small>jQuery</small>
				</a>
				<a href="https://astro.build" target="_blank" rel="noopener" class="icon">
					<AstroIcon/>
					<small>Astro</small>
				</a>
				<a href="https://svelte.dev" target="_blank" rel="noopener" class="icon">
					<Svelte/>
					<small>Svelte</small>
				</a>
				<a href="https://vuejs.org" target="_blank" rel="noopener" class="icon">
					<a href="https://vuejs.org" target="_blank" rel="noopener" class="icon">
						<Vue/>
						<small>Vue.js</small>
					</a>
				</a>
				<a href="https://reactjs.org" target="_blank" rel="noopener" class="icon">
					<React/>
					<small>React</small>
				</a>
				<a href="https://nextjs.org" target="_blank" rel="noopener" class="icon">
					<NextJs/>
					<small>Next.js</small>
				</a>
				<a href="https://angular.dev" target="_blank" rel="noopener" class="icon">
					<Angular/>
					<small>Angular</small>
				</a>
			</div>
		</article>

		<article>
			<h3>Bundlers</h3>
			<div class="flex flex-wrap gap-3">

				<a href="https://vitejs.dev" target="_blank" rel="noopener" class="icon">
					<Vite/>
					<small>Vite.js</small>
				</a>
				<a href="https://www.gnu.org/software/make/" target="_blank" rel="noopener" class="icon">
					<GnuMake/>
					<small>Makefile</small>
				</a>
				<a href="https://parceljs.org" target="_blank" rel="noopener" class="icon">
					<Parcel/>
					<small>Parcel</small>
				</a>
				<a href="https://webpack.js.org" target="_blank" rel="noopener" class="icon">
					<Webpack/>
					<small>Webpack</small>
				</a>
			</div>
		</article>

		<article>
			<h3>Databases</h3>
			<div class="flex flex-wrap gap-3">
				<a href="https://www.mongodb.com" target="_blank" rel="noopener" class="icon">
					<Mongodb/>
					<small>MongoDB</small>
				</a>
				<a href="https://mariadb.org" target="_blank" rel="noopener" class="icon">
					<Mariadb/>
					<small>Mariadb</small>
				</a>
				<a href="https://redis.io" target="_blank" rel="noopener" class="icon">
					<Redis/>
					<small>Redis</small>
				</a>
			</div>
		</article>


		<article>
			<h3>Code quality</h3>
			<div class="flex flex-wrap gap-3">
				<a href="https://github.com/avajs/ava" target="_blank" rel="noopener" class="icon">
					<Ava/>
					<small>Ava</small>
				</a>
				<a href="https://phpunit.de" target="_blank" rel="noopener" class="icon">
					<PhpUnit/>
					<small>PHP Unit</small>
				</a>
				<a href="https://www.cypress.io" target="_blank" rel="noopener" class="icon">
					<Cypress/>
					<small>Cypress</small>
				</a>
				<a href="https://mochajs.org" target="_blank" rel="noopener" class="icon">
					<Mocha/>
					<small>Mocha</small>
				</a>
			</div>
		</article>

		<article>
			<h3>TechStack</h3>
			<div class="flex flex-wrap gap-3">
				<a href="https://www.apple.com/macos" target="_blank" rel="noopener" class="icon">
					<Apple/>
					<small>MacOS</small>
				</a>
				<a href="https://www.linux.org" target="_blank" rel="noopener" class="icon">
					<Linux/>
					<small>Linux</small>
				</a>
				<a href="https://www.docker.com" target="_blank" rel="noopener" class="icon">
					<Docker/>
					<small>Docker</small>
				</a>
				<a href="https://git-scm.com" target="_blank" rel="noopener" class="icon">
					<Git/>
					<small>Git</small>
				</a>
				<a href="https://www.jetbrains.com/phpstorm/" target="_blank" rel="noopener" class="icon">
					<PhpStorm/>
					<small>PhpStorm</small>
				</a>
			</div>
		</article>
	</div>
</section>

<style>
	article {
		h3 {
			@apply font-semibold text-xl mb-2;
		}

		a {
			@apply flex flex-col gap-0.5 items-center;
		}

		svg {
			@apply size-16 print:size-6;
		}
	}
</style>