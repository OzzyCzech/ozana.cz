---
import './main.css';
interface Props {
	title: string;
	description?: string;
}

const {
	title = "Ing. Roman Ožana",
	description = "Personal website of Roman Ožana",
} = Astro.props;

import SpeedInsights from "@vercel/speed-insights/astro"

const canonical = new URL(Astro.url.pathname, "https://ozana.cz");
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width"/>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
	<link rel="canonical" href={canonical}/>
	<link rel="author" href="/humans.txt"/>
	<title>{title}</title>
	<meta name="description" content={description}/>
	<meta name="author" content="All: Roman Ožana; e-mail: roman@ozana.cz"/>
</head>
<body class="font-sans bg-slate-100 text-gray-900 antialiased leading-normal tracking-normal grid min-h-screen grid-rows-[auto_1fr_auto]">
<slot/>
<SpeedInsights/>
</body>
</html>