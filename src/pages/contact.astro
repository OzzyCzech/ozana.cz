---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import IconGitHub from "../components/IconGitHub.astro";
import UserIcon from "../icons/user.svg";
---
<Layout title="Ing. Roman Ožana / Contact">

	<Header/>
	<main class="container p-4 mx-auto max-w-(--breakpoint-sm) self-center align-center">

		<div class="flex justify-between">


			<div>
				<h2 class="text-3xl font-semibold mb-8">
					Want to talk? <br>
					Let's get in touch!
				</h2>
			</div>

			<div>
				<p>
					<a href="mailto:roman@ozana.cz" itemprop="email" class="font-semibold text-3xl">roman@ozana.cz</a>
				</p>
				<p>
					<a href="tel:+420605783455" itemprop="telephone" class="font-semibold text-xl">+420 605 783 455</a>
				</p>
				<p>
					<IconGitHub/>
					<a href="https://github.com/OzzyCzech/" target="_blank">
						github.com/OzzyCzech
					</a>
				</p>

				<p itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
					<span hidden itemprop="streetAddress">Přímětická 1199/36</span>
					<span itemprop="addressLocality">Prague</span>,
					<span itemprop="addressRegion">Czech Republic</span>
					<span hidden itemprop="postalCode">14000</span>
				</p>

				<p>
					IN: <a href="https://www.rzp.cz/verejne-udaje/cs/udaje/vyber-subjektu;ico=87098504" title="Registration number" target="_blank" class="text-current">87098504</a>
				</p>

			</div>
		</div>

		<div class="text-center mt-24">
			<a
				href="/ozana.vcf"
				class="py-3 px-5 font-medium bg-slate-800 hover:bg-slate-900 rounded-full text-white hover:text-white hover:no-underline inline-flex gap-1 items-center mt-5 print:hidden"
				download="Roman Ožana.vcf">
				<UserIcon class="size-5"/>
				Add to Contacts
			</a>
		</div>


	</main>
	<Footer/>
</Layout>