---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Avatar from "../components/Avatar.astro";
import {Image} from "astro:assets";
import dino from '../../public/favicon.svg';
---

<Layout title="Page not found">
	<Header/>
	<main class="lg:container lg:mx-auto self-center align-center text-center">
		<Image src={dino} alt="404" class="size-86 mx-auto mb-4"/>
		<h1 class="text-3xl lg:text-6xl font-bold mb-4">#404 Page not found</h1>
		<p class="text-lg mb-4">The page you are looking for does not exist. <a href="/" class="text-blue-600">Return to the homepage</a>.</p>
	</main>
	<Footer/>
</Layout>